        <command kind="async" opcode="6" mnemonic="MVCAM_FLIGHT_MODE" >
            <comment>Toggle delivery of images to GNC and frame-to-frame autoexposure clamp</comment>
            <args>
                <arg name="mode" type="ENUM">
                    <enum name="MVCamFlightMode">
                        <item name="MVCAM_MODE_PREFLIGHT"/>
                        <item name="MVCAM_MODE_FLIGHT"/>
                    </enum>
                </arg>
            </args>
        </command>
        <command kind="async" opcode="7" mnemonic="MVCAM_IMG_TLM_MODE" >
            <comment>Toggle image telemetry</comment>
            <args>
                <arg name="mode" type="ENUM">
                    <enum name="MVCamImgTlmMode">
                        <item name="MVCAM_IMG_TLM_OFF"/>
                        <item name="MVCAM_IMG_TLM_ON"/>
                    </enum>
                </arg>
            </args>
        </command>
        <command kind="async" opcode="8" mnemonic="MVCAM_SET_LOG_SKIP" >
            <args>
                <arg name="skipCount" type="U32">
                </arg>
            </args>
        </command>
  </commands>
